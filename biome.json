{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"formatter": {
		"indentWidth": 6
	},
	"files": {
		"ignore": ["node_modules", "dist", "migrations"]
	},
	"linter": {
		"ignore": ["node_modules", "dist", "duckdb.js"],
		"rules": {
			"suspicious": {
				"noExplicitAny": "warn"
			},
			"style": {
				"noNonNullAssertion": "info"
			},
			"correctness": {
				"noUnusedImports": "warn"
			}
		}
	}
}
